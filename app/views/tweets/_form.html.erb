<!-- Modal Structure -->
<div class="modal-content">
  <h4>Add Category</h4>
  <div class="collection">
    <% @categories.each do |category| %>
      <%= link_to category.name, tweet_path(params: {tweet_id: @tweet.id, category_id: category.id}),
                  method: :patch, remote: true, class: 'collection-item' %>
    <% end %>
  </div>
</div>