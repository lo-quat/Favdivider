<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= link_to("いいね多い順",controller: :tweets,action: :index,sort: 1) %>
    </div>
    <div class="col-md-8">
      <% @tweets.each do |tweet| %>
        <div class="well-sm well">
          <%= tweet.user_id %> @<%= tweet.postuser_screen_name %><br/>
          <%= tweet.text %><br/>
          RT <%= tweet.retweet_count %> いいね <%= tweet.favorite_count %><br/>
          Posted <%= time_ago_in_words(tweet.post_created_at) %> ago.<br/>

          <% if tweet.tweet_images %>
            <% tweet.tweet_images.each do |image| %>
              <%= image_tag(image.tweetimage_url, size: 50) %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>