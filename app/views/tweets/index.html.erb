<% if user_signed_in? %>
  <%= render 'tweets/search_form' %>
  <div class="col-md-8">
    <p>ツイート数</p>
    <%= @tweets.count %>
    <% @tweets.each do |tweet| %>
      <div class="tweets">
        <li id="tweet-<%= tweet.id %>">
          <%= image_tag(tweet.postuser_profile_image, size: 50) %>
          <span class="user"><%= tweet.user_id %> @<%= tweet.postuser_screen_name %></span>
        <span class="content">
          <%= tweet.text %>
          <% if tweet.tweet_images %>
          <% tweet.tweet_images.each do |image| %>
            <%= image_tag(image.tweetimage_url, size: 50) %>
          <% end %>
        <% end %>
        </span>
          <span class="timestamp">
            Posted <%= time_ago_in_words(tweet.post_created_at) %> ago.
            <%= link_to 'clip', clip_path(tweet), method: :patch %>
            <%= link_to 'カテゴリー追加', edit_tweet_path(tweet) %>
          </span>
        </li>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Favdivider</h1>
    <h2>This app is organize your favorites.</h2>
    <%= link_to "Twitter Login", user_twitter_omniauth_authorize_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
