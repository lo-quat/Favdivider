<ul id="slide-out" class="sidenav sidenav-fixed">
  <li>
    <%= link_to everybodys_tweets_path do%>
      みんなのお気に入りを見る<i class="material-icons">people</i>
    <% end %>
  </li>
  <li><div class="divider"></div></li>
  <p>ツイート検索</p>
  <%= form_tag(tweets_path, method: :get) do %>
    <%= text_field_tag :tweet_text, '', placeholder: "検索ワード" %>
    <%= number_field_tag :like_num, '', placeholder: "○○いいね数以上" %>
    <label>
      <input type="checkbox" class="filled-in" name="clip" value="1"/>
      <span>Cliped</span>
    </label>
    <label>
      <input type="checkbox" class="filled-in" name="reply" value="1"/>
      <span>自分宛</span>
    </label>
    <%= collection_select :category, :id, current_user.categories, :id, :name, prompt: "カテゴリー選択" %>
    <%= submit_tag 'Search', name: nil, class: 'btn' %>
  <% end %>
  <li><%= link_to "ツイート一覧", tweets_path, class: 'waves-effect' %></li>
  <li><%= link_to "投稿ユーザー別", post_users_path, class: 'waves-effect' %></li>
  <li><%= link_to "カテゴリー編集", categories_path, class: 'waves-effect' %></li>
  <li><div class="divider"></div></li>
  <li><%= link_to "更新", users_tweet_fetch_path, class: 'waves-effect' %></li>
  <li><div class="divider"></div></li>
  <li><%= link_to "アカウント", user_path(current_user) %></li>
  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'waves-effect' %></li>
</ul>