<%= search_form_for @q, url: post_users_path do |f| %>
  <%= f.text_field :search_words_cont, placeholder: 'ユーザー検索' %>
  <%= f.submit 'Search', class: 'btn' %>
<% end %>
<% @post_users.each do |post_user| %>
  <div class="tweet post-user">
    <%= image_tag(post_user.profile_image, size: 50) %>
    <span class="user"><%= post_user.name %>
      <span class="screen-name">@<%= post_user.screen_name %></span></span>
    <span class="content">
        <p><%= post_user.profile_description %></p>
        </span>
      <%= link_to '', post_user_path(post_user.id), 'aria-hidden': true %>
  </div>
<% end %>
