<%= form_for(@user) do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.submit "更新" %>
<% end %>

<% if current_user.authenticated?  %>
  <p>連携済み</p>
  <%= link_to "TweetFetch",users_tweet_fetch_path %>
<% else %>
  <%= link_to "Twitter連携", '/auth/twitter' %>
<% end %>

